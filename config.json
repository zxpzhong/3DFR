{
    "name": "pytorch3duvmap",
    "n_gpu": "2",

    "arch": {
        "type": "DR_3D_Model",
        "args": {
            "num_classes":1
        }
    },
    "train_data_loader": {
        "type": "LFMB_3DFB_Pictures_Seged_Rectified",
        "args":{
            "data_dir": "/home/zf/vscode/3d/DR_3DFM/data/train_file_forever.csv",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2
        }
    },
    "valid_data_loader": {
        "type": "LFMB_3DFB_Pictures_Seged_Rectified",
        "args":{
            "data_dir": "/home/zf/vscode/3d/DR_3DFM/data/valid_file_forever.csv",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2
        }
    },
    "test_data_loader": {
        "type": "LFMB_3DFB_Pictures_Seged_Rectified",
        "args":{
            "data_dir": "/home/zf/vscode/3d/DR_3DFM/data/test_file_forever.csv",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "L2",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": true
    }
}
